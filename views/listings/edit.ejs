<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
        <!-- Center the form using Bootstrap grid -->
        <div class="col-8 offset-2">
            <h4 class="my-4">Edit Listing</h4>

            <!-- Change enctype to 'multipart/form-data' for file uploads -->
            <form method="POST" action="/listings/<%= list._id %>/update?_method=PUT" enctype="multipart/form-data">
                <!-- Title -->
                <div class="mb-2">
                    <label for="title" class="form-label">Listing Title</label>
                    <input type="text" id="title" name="title" value="<%= list.title %>" placeholder="e.g., Cozy Apartment in New York" class="form-control" required>
                </div>

                <!-- Description -->
                <div class="mb-2">
                    <label for="description" class="form-label">Listing Description</label>
                    <textarea id="description" name="description" rows="2" class="form-control" placeholder="e.g., A beautiful apartment with great amenities and views." required><%= list.description %></textarea>
                </div>

                <!-- Image Upload -->
                <div class="mb-2">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" id="image" name="image" class="form-control">
                </div>

                <!-- Image Preview -->
                <div class="mb-2">
                    <label class="form-label">Image Preview</label>
                    <div>
                        
                        <img id="imagePreview" src="<%= imageUrl %>" alt="Image Preview" class="img-fluid" style="max-height: 200px; width: auto;">
                    </div>
                </div>

                <!-- Price and Country -->
                <div class="row">
                    <div class="mb-2 col-md-4">
                        <label for="price" class="form-label">Price (in â‚¹)</label>
                        <input type="number" id="price" name="price" value="<%= list.price %>" placeholder="e.g., 5000" class="form-control" required>
                    </div>
                    <div class="mb-2 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" name="country" value="<%= list.country %>" placeholder="e.g., India" class="form-control" required>
                    </div>
                </div>

                <!-- Location -->
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="location" value="<%= list.location %>" placeholder="e.g., Mumbai, Maharashtra" class="form-control" required>
                </div>

                <!-- Submit Button -->
                <div class="mb-5 text-center">
                    <button type="submit" class="btn btn-warning">Update Listing</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript to handle image preview -->
    <script>
        const imageInput = document.getElementById('image');
        const imagePreview = document.getElementById('imagePreview');

        imageInput.addEventListener('input', function () {
            imagePreview.src = URL.createObjectURL(imageInput.files[0]); // Update the image preview when the file changes
        });
    </script>
</body>
