        <div class="form-check-reverse form-switch">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display After Taxes</label>
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          </div>
    </div>
</div>
<body>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">        
        <% for (let list of totalList) { %>
            <a href="/listings/<%= list._id %> " class="sh-links">
            <div class="card" style="width: 18rem; margin: 1rem;">
                <img class="card-img-top" src="<%= list.image.url %>" alt="Card image cap">
                <div class="card-body">
                    <p>
                        <b><%= list.title %></b> <br>
                        â‚¹<%= list.price.toLocaleString('en-IN') %>/night
                        <i class="tax-info">&nbsp; &nbsp; +12% GST</i>
                    </p>
                </div>
            </div>
            </a>
        <% } %>
    </div>
</body>

<script>
    let taxSwitch=document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxes=document.getElementsByClassName("tax-info");
        console.log(taxes);
        for(let tax of taxes){
            if(tax.style.display != "inline"){
                tax.style.display="inline";
            }else{
                tax.style.display="none";
            }
        }
    });
</script>